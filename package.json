{
  "name": "server-book-store",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "src/index.js",
  "scripts": {
    "postinstall": "npx -y sort-package-json",
    "lint": "eslint --fix --ext .js .",
    "prepack": "husky install",
    "prettier": "prettier --write **/*.js",
    "setcodepage": "run-script-os",
    "setcodepage:linux": "",
    "setcodepage:windows": "chcp 65001",
    "start": "npm run setcodepage && npm run lint && cross-env NODE_ENV=development nodemon src/index.js",
    "start:production": "cross-env NODE_ENV=production node src/index.js",
    "test": "jest --collectCoverage --passWithNoTests",
    "test:ci": "cross-env CI=true npm test -- --reporters=default --reporters=jest-junit --coverage --coverageReporters=cobertura --coverageReporters=lcov --coverageReporters=html",
    "test:watch": "npm run test -- --watch",
    "test:watchAll": "npm run test -- --watchAll"
  },
  "lint-staged": {
    "**/*.+(js|md|css|graphql|json)": "prettier --write"
  },
  "nodemonConfig": {
    "ext": "js,mjs,json,graphql"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.4.0",
    "@graphql-tools/load": "^7.7.0",
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/merge": "^8.3.6",
    "@graphql-tools/schema": "^8.5.0",
    "@koa/cors": "^3.3.0",
    "@koa/router": "^11.0.1",
    "@opentelemetry/exporter-prometheus": "^0.27.0",
    "@opentelemetry/sdk-metrics-base": "^0.27.0",
    "@totalsoft/correlation": "^1.1.0",
    "@totalsoft/graceful-shutdown": "^1.1.0",
    "@totalsoft/key-per-file-configuration": "^1.1.0",
    "@totalsoft/pino-apollo": "^1.1.0",
    "@totalsoft/pino-correlation": "^1.1.0",
    "@totalsoft/pino-mssqlserver": "^1.1.0",
    "apollo-datasource": "^3.3.2",
    "apollo-datasource-rest": "^3.6.1",
    "apollo-server": "^3.10.0",
    "apollo-server-core": "^3.10.0",
    "apollo-server-koa": "^3.10.0",
    "async-mutex": "^0.3.2",
    "bluebird": "3.7.2",
    "colors": "^1.4.0",
    "console-stamp": "^3.0.6",
    "dataloader": "^2.1.0",
    "dotenv": "16.0.1",
    "graphql": "15.8.0",
    "graphql-upload": "^13.0.0",
    "humps": "^2.0.1",
    "jsonwebtoken": "8.5.1",
    "jwks-rsa": "^2.1.4",
    "knex": "^0.95.0",
    "knex-tiny-logger": "^2.1.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-ignore": "^1.0.1",
    "koa-jwt": "^4.0.3",
    "mime-types": "^2.1.35",
    "mssql": "^8.1.2",
    "numeral": "^2.0.6",
    "path": "^0.12.7",
    "pino": "^7.6.3",
    "pino-abstract-transport": "^1.0.0",
    "pino-pretty": "^8.1.0",
    "ramda": "^0.28.0",
    "tedious": "^14.7.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "eslint": "^8.19.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "jest-extended": "^3.0.0",
    "jest-junit": "^14.0.0",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "run-script-os": "^1.1.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">= 7.16.0"
  }
}
